generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/**
 * =========================
 * ENUMS
 * =========================
 */

enum RoomStatus {
  WAITING
  PLAYING
  FINISHED
}

enum GameStatus {
  ACTIVE
  COMPLETED
}

enum ShapeType {
  rect
  circle
  line
  pencil
}

enum ChatType {
  MESSAGE
  CORRECT
  CLOSE
}

enum Role {
  user
  admin
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  avatarId  String
  createdAt DateTime @default(now())

  role Role

  rooms Room[]
}

model Room {
  id        String     @id @default(uuid())
  slug      String     @unique
  status    RoomStatus @default(WAITING)
  createdAt DateTime   @default(now())

  adminId String
  admin   User   @relation(fields: [adminId], references: [id])
}
