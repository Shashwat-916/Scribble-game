generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
enum RoomStatus {
  WAITING
  PLAYING
  FINISHED
}

enum ShapeType {
  rect
  circle
  line
  pencil
}

model User {
  id        String   @id @default(uuid())
  username  String
  avatarId  Int
  score     Int      @default(0)
  createdAt DateTime @default(now())

  // 1. User belongs to a Room (Member)
  roomId    String?
  room      Room?    @relation("RoomMembers", fields: [roomId], references: [id])

  // 2. User sends many Chats
  chats     Chat[]

  // 3. User might be an Admin of many rooms (Optional but good for history)
  roomsManaged Room[] @relation("RoomAdmin")
}

model Room {
  id        String   @id @default(uuid())
  slug      String   @unique
  createdAt DateTime @default(now())
  status    RoomStatus @default(WAITING)


 

  // --- Game State (Persisted) ---
  currentWord     String?  // The word being guessed
  currentDrawerId String?  // ID of the user drawing right now

  // --- Relations ---
  
  // 1. The Admin (Strict Link)
  // We use a named relation "RoomAdmin" to distinguish from normal members
  adminId   String
  admin     User     @relation("RoomAdmin", fields: [adminId], references: [id])

  // 2. The Players
  users     User[]   @relation("RoomMembers")

  // 3. The Data
  shapes    Shape[]
  chats     Chat[]
}

model Chat {
  // CHANGED: Int -> String (UUID)
  id        String   @id @default(uuid()) 
  message   String
  createdAt DateTime @default(now())

  // Relation: Which Room?
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])

  // Relation: Who spoke?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Shape {
  // CHANGED: Int -> String (UUID)
  id        String   @id @default(uuid()) 

  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])

  type      ShapeType
  data      Json
}